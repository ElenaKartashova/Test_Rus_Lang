<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcaaa4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/rus_lang_main_txt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#3E4757"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_button_class_6"
        style="@style/Button.RoundNew.Yellow"
        android:layout_marginTop="80dp"
        android:text="@string/_6"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toStartOf="@+id/main_button_class_7"
        app:layout_constraintStart_toEndOf="@+id/main_button_class_5"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/main_button_class_5"
        style="@style/Button.RoundNew.Yellow"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:text="@string/_5"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/main_button_class_7"
        style="@style/Button.RoundNew.Yellow"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:text="@string/_7"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/main_button_class_8"
        style="@style/Button.RoundNew.Yellow"
        android:layout_marginTop="20dp"
        android:text="@string/_8"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toStartOf="@+id/main_button_class_7"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_class_5" />

    <Button
        android:id="@+id/main_button_class_9"
        style="@style/Button.RoundNew.Yellow"
        android:layout_marginTop="20dp"
        android:text="@string/_9"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="@+id/main_button_class_6"
        app:layout_constraintTop_toBottomOf="@+id/main_button_class_7" />

</androidx.constraintlayout.widget.ConstraintLayout>